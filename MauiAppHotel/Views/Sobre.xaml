<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#0D0D0D">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="CenterAndExpand">

            <!-- Título -->
            <Label Text="Sobre o Aplicativo"
                   FontFamily="PlayfairDisplay"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="#800020"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- Descrição -->
            <Frame BackgroundColor="#1A1A1A"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="20">
                <Label Text="Este aplicativo foi desenvolvido para auxiliar na gestão de hospedagens do Hotel Eclipse, permitindo calcular diárias, selecionar suítes e gerenciar informações de forma prática e intuitiva."
                       FontSize="18"
                       TextColor="#E5E5E5"
                       LineHeight="1.4"
                       HorizontalTextAlignment="Center" />
            </Frame>

            <!-- Informações do desenvolvedor -->
            <Frame BackgroundColor="#1A1A1A"
                   BorderColor="#800020"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="20"
                   Margin="0,10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Desenvolvedor"
                           FontFamily="PlayfairDisplay"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#800020"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Nome: Gabriel Araujo Fontes"
                           FontSize="18"
                           TextColor="#F5F5F5"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Ano de desenvolvimento: 2025"
                           FontSize="16"
                           TextColor="#A3A3A3"
                           HorizontalTextAlignment="Center" />

                    <Label Text="E-mail: fontes.agabriel@gmail.com"
                           FontSize="16"
                           TextColor="#F5F5F5"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Telefone: (11) 99999-9999"
                           FontSize="16"
                           TextColor="#F5F5F5"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Informações do hotel -->
            <Frame BackgroundColor="#1A1A1A"
                   BorderColor="#800020"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="20"
                   Margin="0,10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Hotel Eclipse"
                           FontFamily="PlayfairDisplay"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#800020"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Endereço: Av. das Palmeiras, 123 – Florianópolis, SC"
                           FontSize="16"
                           TextColor="#F5F5F5"
                           HorizontalTextAlignment="Center" />

                    <Label Text="E-mail: contato@hoteleclipse.com"
                           FontSize="16"
                           TextColor="#F5F5F5"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Telefone: (48) 3333-4444"
                           FontSize="16"
                           TextColor="#F5F5F5"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Site: www.hoteleclipse.com.br"
                           FontSize="16"
                           TextColor="#5A9EFF"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Botão Voltar -->
            <Button x:Name="BtnVoltar"
                    Text="Voltar"
                    BackgroundColor="#800020"
                    TextColor="White"
                    CornerRadius="25"
                    FontFamily="PlayfairDisplay"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    Clicked="Button_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
