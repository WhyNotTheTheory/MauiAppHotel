<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#0E1525">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="30" VerticalOptions="CenterAndExpand">

            <!-- TÃ­tulo -->
            <Label Text="{Binding QuartoSelecionado.Descricao}"
                   FontSize="38"
                   FontFamily="Segoe UI Semibold"
                   FontAttributes="Bold"
                   TextColor="#F1F5F9"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center" />

            <!-- Quantidade de hÃ³spedes -->
            <Frame BackgroundColor="#1B2433"
                   BorderColor="#38BDF8"
                   CornerRadius="20"
                   Padding="15"
                   HasShadow="True">
                <HorizontalStackLayout Spacing="30" HorizontalOptions="Center">
                    <Label Text="ðŸ‘¨â€ðŸ‘©â€ðŸ‘§ Adultos:" 
                           TextColor="#E2E8F0"
                           FontFamily="Segoe UI Semibold" />
                    <Label Text="{Binding QntAdultos}" 
                           TextColor="#38BDF8" 
                           FontFamily="Segoe UI Semibold"/>
                    <Label Text=" | CrianÃ§as:" 
                           TextColor="#E2E8F0"
                           FontFamily="Segoe UI Semibold" />
                    <Label Text="{Binding QntCriancas}" 
                           TextColor="#38BDF8"
                           FontFamily="Segoe UI Semibold"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- PerÃ­odo -->
            <Frame BackgroundColor="#1B2433"
                   BorderColor="#38BDF8"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True">
                <Grid ColumnDefinitions="*, *, *" 
                      RowDefinitions="Auto, Auto" 
                      ColumnSpacing="10"
                      HorizontalOptions="Center">

                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Check-in" 
                           FontFamily="Segoe UI Semibold"
                           TextColor="#E2E8F0" />

                    <Label Grid.Row="0" Grid.Column="1" 
                           Text="Check-out" 
                           FontFamily="Segoe UI Semibold"
                           TextColor="#E2E8F0" />

                    <Label Grid.Row="0" Grid.Column="2" 
                           Text="Estadia" 
                           FontFamily="Segoe UI Semibold"
                           TextColor="#E2E8F0" />

                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                           TextColor="#38BDF8" 
                           FontFamily="Segoe UI" />

                    <Label Grid.Row="1" Grid.Column="1" 
                           Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                           TextColor="#38BDF8" 
                           FontFamily="Segoe UI" />

                    <Label Grid.Row="1" Grid.Column="2" 
                           Text="{Binding Estadia}"
                           TextColor="#38BDF8"
                           FontFamily="Segoe UI" />
                </Grid>
            </Frame>

            <!-- Valor total -->
            <Frame BackgroundColor="#2563EB"
                   CornerRadius="25"
                   Padding="25"
                   HasShadow="True">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="Valor Total"
                           FontSize="22"
                           FontFamily="Segoe UI Semibold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"
                           FontSize="32"
                           FontFamily="Segoe UI"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- BotÃ£o Voltar -->
            <Button Text="Voltar"
                    Clicked="Button_Clicked"
                    BackgroundColor="Transparent"
                    TextColor="#38BDF8"
                    BorderColor="#38BDF8"
                    BorderWidth="2"
                    CornerRadius="30"
                    HeightRequest="55"
                    FontFamily="Segoe UI Semibold"
                    FontAttributes="Bold"
                    FontSize="18">
                <Button.Shadow>
                    <Shadow Brush="#55000000" Offset="3,3" Radius="6" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
