<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#0E1525">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="30">

            <!-- Título -->
            <Label Text="Hotel Eclipse"
                   FontSize="42"
                   FontFamily="Segoe UI Semibold"
                   FontAttributes="Bold"
                   TextColor="#F1F5F9"
                   HorizontalOptions="Center" />

            <Label Text="Sua experiência começa aqui"
                   FontSize="17"
                   FontFamily="Segoe UI"
                   TextColor="#9CA3AF"
                   HorizontalOptions="Center" />

            <!-- Card de Hóspedes -->
            <Frame BackgroundColor="#1B2433"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Hóspedes"
                           FontSize="22"
                           FontFamily="Segoe UI Semibold"
                           TextColor="#E2E8F0"
                           HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="Auto,*,Auto"
                          RowDefinitions="Auto,Auto"
                          ColumnSpacing="10"
                          RowSpacing="10">

                        <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" TextColor="#CBD5E1" FontFamily="Segoe UI"/>
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Value}"
                               BindingContext="{x:Reference stp_adultos}"
                               TextColor="#38BDF8"
                               FontAttributes="Bold"
                               FontFamily="Segoe UI Semibold"/>
                        <Stepper Grid.Row="0" Grid.Column="2"
                                 x:Name="stp_adultos"
                                 Minimum="0"
                                 Maximum="10"
                                 Increment="1" />

                        <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" TextColor="#CBD5E1" FontFamily="Segoe UI"/>
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Value}"
                               BindingContext="{x:Reference stp_criancas}"
                               TextColor="#38BDF8"
                               FontAttributes="Bold"
                               FontFamily="Segoe UI Semibold"/>
                        <Stepper Grid.Row="1" Grid.Column="2"
                                 x:Name="stp_criancas"
                                 Minimum="0"
                                 Maximum="10"
                                 Increment="1" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Card de Suíte -->
            <Frame BackgroundColor="#1B2433"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Suíte"
                           FontSize="22"
                           FontFamily="Segoe UI Semibold"
                           TextColor="#E2E8F0"
                           HorizontalOptions="Center" />
                    <Picker x:Name="pck_quarto"
                            Title="Selecione sua acomodação"
                            ItemDisplayBinding="{Binding Descricao}"
                            TitleColor="#9CA3AF"
                            TextColor="#E0E0E0"
                            BackgroundColor="#273142"
                            FontFamily="Segoe UI"
                            FontAttributes="Bold" />
                </VerticalStackLayout>
            </Frame>

            <!-- Card de Período -->
            <Frame BackgroundColor="#1B2433"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Período"
                           FontSize="22"
                           FontFamily="Segoe UI Semibold"
                           TextColor="#E2E8F0"
                           HorizontalOptions="Center" />

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Check-in:" TextColor="#CBD5E1" FontFamily="Segoe UI"/>
                        <DatePicker x:Name="dtpck_checkin"
                                    Format="dd/MM/yyyy"
                                    TextColor="#38BDF8"
                                    BackgroundColor="#273142"
                                    DateSelected="dtpck_checkin_DateSelected" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Check-out:" TextColor="#CBD5E1" FontFamily="Segoe UI"/>
                        <DatePicker x:Name="dtpck_checkout"
                                    Format="dd/MM/yyyy"
                                    TextColor="#38BDF8"
                                    BackgroundColor="#273142" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Botões -->
            <VerticalStackLayout Spacing="15" Margin="0,20,0,30">

                <!-- Botão principal -->
                <Button Text="Calcular e Avançar"
                        Clicked="Button_Clicked"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        CornerRadius="30"
                        HeightRequest="55"
                        FontSize="18"
                        FontFamily="Segoe UI Semibold"
                        FontAttributes="Bold">
                    <Button.Shadow>
                        <Shadow Brush="#66000000" Offset="5,5" Radius="10" />
                    </Button.Shadow>
                </Button>

                <!-- Botão secundário -->
                <Button Text="Sobre o Aplicativo"
                        Clicked="AbrirSobre_Clicked"
                        BackgroundColor="Transparent"
                        BorderColor="#38BDF8"
                        BorderWidth="2"
                        TextColor="#38BDF8"
                        CornerRadius="30"
                        HeightRequest="55"
                        FontSize="18"
                        FontFamily="Segoe UI Semibold"
                        FontAttributes="Bold">
                    <Button.Shadow>
                        <Shadow Brush="#44000000" Offset="3,3" Radius="6" />
                    </Button.Shadow>
                </Button>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
